<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="viewHolderCarStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="viewHolderBannerAdvertStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:drawableStart">@mipmap/ic_launcher</item>
        <item name="android:drawableEnd">@mipmap/ic_launcher</item>
        <item name="android:textSize">@dimen/banner_ad_textSize</item>
        <item name="android:text">@string/bannerAdvertText</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/holo_purple</item>
    </style>

    <style name="viewHolderFullScreenAdvertStyle">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:text">@string/fullScreenAdvertText</item>
        <item name="android:drawableTop">@mipmap/ic_launcher</item>
        <item name="android:drawableBottom">@mipmap/ic_launcher</item>
        <item name="android:drawableStart">@mipmap/ic_launcher</item>
        <item name="android:drawableEnd">@mipmap/ic_launcher</item>
        <item name="android:textSize">@dimen/fullscreen_ad_textSize</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
